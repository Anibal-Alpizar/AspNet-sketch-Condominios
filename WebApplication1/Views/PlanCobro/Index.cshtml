@model IEnumerable<WebApplication1.Models.GESTION_PLANES_COBRO>

@{
    ViewBag.Title = "Listado de planes de cobro";
}

<style>

    .titulo-pagina {
        text-align: center;
        font-size: 2rem;
        color: #336699;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .card {
        margin-bottom: 1rem;
        border: 1px solid #e2e8f0;
        border-radius: 0.5rem;
        overflow: hidden;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: 500;
    }

    .card-subtitle {
        font-size: 1rem;
        color: #4a5568;
        margin-top: 0.5rem;
    }

    .card-text {
        font-size: 0.9rem;
        color: #4a5568;
        margin: 0.25rem 0;
    }

    .card-label {
        font-size: 0.9rem;
        font-weight: 500;
        color: #718096;
        margin-right: 0.5rem;
    }

    .card-body {
        padding-bottom: 1.5rem;
        margin-left: 1rem;
    }

    .hidden {
        display: none;
    }

    .btn {
        font-size: 1.2rem;
        padding: 0.5rem 1rem;
    }

    .btn-group {
        margin-top: 1rem;
        margin-right: 5px;
    }

        .btn-group .btn:first-child {
            margin-left: 0; /* Restaura el margen izquierdo a cero para el primer botón */
        }
</style>


<div class="container">
    <h1 class="titulo-pagina">@ViewBag.Title</h1>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body p-3" style="padding-bottom: 1.5rem;">
                        <!-- Card title -->
                        <h5 class="card-title">
                            <strong>@Html.DisplayFor(modelItem => item.USUARIO.FULLNAME)</strong>
                            - Plan de cobro #PC-@Html.DisplayFor(modelItem => item.ID_PLAN_COBRO)
                        </h5>
                        <p class="card-text">Monto: @Html.DisplayFor(modelItem => item.MONTO)</p>
                        <p class="card-text">Fecha Fin: @Html.DisplayFor(modelItem => item.FECHA_FIN)</p>
                        <!-- Detail button -->
                        <div class="btn-group d-grid">
                            <button type="button" class="btn btn-primary btn-detalle" data-toggle="modal" data-target="#modalDetalle_@item.ID_PLAN_COBRO">
                                <i class="fa-solid fa-circle-info"></i> Detalle
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<!-- Modal -->
@foreach (var item in Model)
{
    <div class="modal fade" id="modalDetalle_@item.ID_PLAN_COBRO" tabindex="-1" role="dialog" aria-labelledby="modalDetalleLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="modalDetalleLabel">@item.USUARIO.FULLNAME - @item.USUARIO.CORREO</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close" style="position:absolute; top: 10px; right: 10px;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Número de residencia: @item.FECHA_INICIO</p>
                    <p>Cantidad de personas: @item.FECHA_FIN</p>
                    <p>Año de inicio: @item.ID_PLAN_COBRO</p>
                    <p>Cantidad de carros: @item.ESTADO_COBRO</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
}




