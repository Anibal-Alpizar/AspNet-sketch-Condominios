@model IEnumerable<WebApplication1.Models.RESIDENCIA>

@{
    ViewBag.Title = "Listado de residencias";
}

<style>
    .titulo-pagina {
        text-align: center;
        font-size: 2rem;
        color: #336699;
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>

<h1 class="titulo-pagina">@ViewBag.Title</h1>
<style>
    .card {
        margin-bottom: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.1);
    }

    .card-body {
        padding: 1rem;
    }

    .btn-detalle {
        margin: 1rem;
    }

    .container-tarjetas {
        margin-top: 20px;
    }
</style>

<div class="container-tarjetas d-flex justify-content-center flex-wrap">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@item.USUARIO.FULLNAME</h5>
                    <p class="card-text">Número de residencia: @item.NUMERO_RESIDENCIA</p>
                    <p class="card-text">Cantidad de personas: @item.CANTIDAD_PERSONAS</p>
                    <p class="card-text">Año de inicio: @item.ANIO_INICIO</p>
                    <p class="card-text">Cantidad de carros: @item.CANTIDAD_CARROS</p>
                    <a href="@Url.Action("Details", "Residencia", new { id = item.ID_RESIDENCIA })" class="btn btn-primary btn-detalle"><i class="fa-solid fa-circle-info"></i> Detalle</a>
                </div>
            </div>
        </div>
    }
</div>