@model IEnumerable<WebApplication1.Models.RUBRO_COBRO>

@{
    ViewBag.Title = "Index";
}

<style>
    .circle-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
    }

    .service-header {
        background-color: #007BFF;
        color: #FFF;
        padding: 5px;
        border-radius: 5px;
        margin-bottom: 5px;
    }

    .card {
        border: none;
        border-radius: 5px;
        box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.2);
    }

    .card-body {
        padding: 1rem;
    }
</style>

<h2>Index</h2>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card" style="box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);">
                <div style="display: flex; align-items: center">
                    @if (item == Model.First())
                    {
                        <img src="https://static.vecteezy.com/system/resources/previews/000/604/946/large_2x/vector-water-nature-logo-and-symbols-template-icons-app.jpg" alt="Imagen @Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)" class="circle-img" />
                        <div class="service-header">@Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)</div>
                    }
                    else if (item == Model.Skip(1).First())
                    {
                        <img src="https://media.istockphoto.com/id/1025681960/vector/light-bulb-icon-vector-sign-and-symbol-isolated-on-white-background-light-bulb-logo-concept.jpg?s=170667a&w=0&k=20&c=XNRD3p_9haeZ-BzjLGGVmyq-99iV7HOhIgKvqIiuDl0=" alt="Imagen @Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)" class="circle-img" />
                        <div class="service-header">@Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)</div>
                    }
                    else if (item == Model.Skip(2).First())
                    {
                        <img src="https://images.assetsdelivery.com/compings_v2/djati11/djati111808/djati11180801948.jpg" alt="Imagen @Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)" class="circle-img" />
                        <div class="service-header">@Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)</div>
                    }
                    else if (item == Model.Last())
                    {
                        <img src="https://www.freepnglogos.com/uploads/logo-internet-png/logo-internet-chemiphase-updated-website-goes-live-chemiphase-ltd-12.png" alt="Imagen @Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)" class="circle-img" />
                        <div class="service-header">@Html.DisplayFor(modelItem => item.NOMBRE_RUBRO)</div>
                    }
                </div>
                <div class="card-body">
                    <p class="card-text">lorem</p>
                    <h5 class="card-title">Monto: @Html.DisplayFor(modelItem => item.MONTO) $</h5>
                    <a href="@Url.Action("Details", new { id = item.ID_RUBRO_COBRO })" class="btn btn-primary">Detalles</a>
                </div>
            </div>
        </div>
    }
</div>